package stepDefinitions;

import org.junit.Assert;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
//import org.openqa.selenium.firefox.FirefoxDriver;
//import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import pageObjects.LoginPage;

public class StepsLogin {

	
	public WebDriver ldriver;
	public LoginPage lpage;
	
	@Given("User Launch Chrome browser")
	public void user_Launch_Chrome_browser() {
		System.setProperty("webdriver.chrome.driver", System.getProperty("user.dir")+"//Drivers/chromedriver.exe");
		ldriver = new ChromeDriver();
		lpage = new LoginPage(ldriver);
		
		
	}

	@When("User opens URL {string}")
	public void user_opens_URL(String url) {
		ldriver.get(url);
	}

	/*
	@When("User enters Username as {string} and Passord as {string}")
	public void user_enters_Username_as_and_Passord_as(String user, String pass) {
		//lpage.setUsername(user);
		//lpage.setPassword(pass);
	}

	@When("Click on Login")
	public void click_on_Login() {
		//lpage.clickBtnSignIn();
	}
	*/
	
	@Then("Page Title should be {string}")
	public void page_Title_should_be(String title) throws InterruptedException {
	    Assert.assertEquals(title, ldriver.getTitle());
	    Thread.sleep(5000);
    
	    ldriver.close();
	}
	
	
	@Then("close browser")
	public void close_browser() {
		ldriver.quit();
		
	}
	

}
